{
  "name": "puente-app",
  "version": "0.1.0",
  "description": "Financial Dignity for the Venezuelan Diaspora. Built on Celo.",
  "keywords": [
    "celo",
    "minipay",
    "stablecoins",
    "remittances",
    "cusd",
    "venezuela",
    "pwa",
    "glassmorphism"
  ],
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "contracts:compile": "turbo run compile --filter=hardhat",
    "contracts:test": "turbo run test --filter=hardhat",
    "contracts:deploy": "turbo run deploy --filter=hardhat",
    "contracts:deploy:celo-sepolia": "turbo run deploy:celo-sepolia --filter=hardhat",
    "contracts:deploy:celo": "turbo run deploy:celo --filter=hardhat",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "pnpm": {
    "overrides": {
      "elliptic": "^6.6.1"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
